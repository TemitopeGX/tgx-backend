APP_NAME="TGX Backend"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://test.bismight.co.uk

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database - REPLACE THESE ON SERVER
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USERNAME=your_database_user
DB_PASSWORD=your_database_password

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Mail - CONFIGURE ON SERVER
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Frontend URL
FRONTEND_URL=https://portfolio.test

# Session & Sanctum
SESSION_DOMAIN=test.bismight.co.uk
SANCTUM_STATEFUL_DOMAINS=test.bismight.co.uk,portfolio.test
